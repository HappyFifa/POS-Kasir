# Environment Variables untuk Production Database
# Copy file ini menjadi .env dan isi dengan credentials yang benar

# ==========================================
# SUPABASE DATABASE CONFIGURATION
# ==========================================

# Supabase Project URL (dari dashboard Supabase)
VITE_SUPABASE_URL=https://your-project-ref.supabase.co

# Supabase Anon Key (dari dashboard Supabase)
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# ==========================================
# CLOUDINARY CONFIGURATION (existing)
# ==========================================

# Cloudinary Cloud Name
VITE_CLOUDINARY_CLOUD_NAME=drgvxe5pg

# Cloudinary Upload Preset
VITE_CLOUDINARY_UPLOAD_PRESET=pos-kasir-preset

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================

# Application Name
VITE_APP_NAME="POS Pro"

# Session Timeout (in milliseconds)
VITE_SESSION_TIMEOUT=3600000

# ==========================================
# DEVELOPMENT/PRODUCTION FLAGS
# ==========================================

# Database Mode: 'supabase' or 'localStorage'
VITE_DATABASE_MODE=supabase

# Environment
VITE_ENVIRONMENT=production

# Enable debug mode
VITE_DEBUG=false

# ==========================================
# NETLIFY CONFIGURATION (for deployment)
# ==========================================

# Set these in Netlify dashboard under Site Settings > Environment Variables
# VITE_SUPABASE_URL=https://your-project-ref.supabase.co
# VITE_SUPABASE_ANON_KEY=your-anon-key-here
# VITE_CLOUDINARY_CLOUD_NAME=drgvxe5pg
# VITE_CLOUDINARY_UPLOAD_PRESET=pos-kasir-preset
